{
  "name": "kb-forge",
  "private": true,
  "workspaces": [
    "apps/web",
    "tools/ingest",
    "tools/tldr",
    "tools/lint"
  ],
  "scripts": {
    "start": "npm -w apps/web start",
    "build": "npm -w apps/web run build",
    "ingest:json": "npm -w tools/ingest run ingest:json",
    "ingest:refs": "npm -w tools/ingest run ingest:refs",
    "tldr:regen": "npm -w tools/tldr run regen",
    "lint:kb": "npm -w tools/lint run lint",
    "ci:build": "npm -w apps/web run build"
  }
}